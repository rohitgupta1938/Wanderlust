<% if (error && error.length > 0) { %>
  <div
    class="relative mx-auto my-2 w-full md:w-1/2 rounded-md border border-red-400 bg-red-100 px-4 py-3 text-red-800"
    role="alert"
  >
    <strong class="font-semibold"><%= error[0] %></strong>

    <button
      type="button"
      class="absolute right-3 top-3 text-red-800 hover:text-red-900"
      onclick="this.parentElement.remove()"
    >
      ✕
    </button>
  </div>
<% } %>

<% if (success && success.length > 0) { %>
  <div
    class="relative mx-auto my-2 w-full md:w-1/2 rounded-md border border-green-400 bg-green-100 px-4 py-3 text-green-800"
    role="alert"
  >
    <strong class="font-semibold"><%= success[0] %></strong>

    <button
      type="button"
      class="absolute right-3 top-3 text-green-800 hover:text-green-900"
      onclick="this.parentElement.remove()"
    >
      ✕
    </button>
  </div>
<% } %>
