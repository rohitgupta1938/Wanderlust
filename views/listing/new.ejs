<% layout('/layouts/boilerplate.ejs') %>

<div class="bg-gray-100 min-h-screen flex items-center justify-center">

  <div class="w-full max-w-lg bg-white rounded-xl shadow-lg p-6">
    <h2 class="text-xl font-bold text-gray-800 mb-4 text-center">
      Create New Listing
    </h2>

    <form action="/listings" method="POST" class="space-y-4">

      <!-- Title -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Title
        </label>
        <input
          type="text"
          name="listing[title]"
          required
          class="w-full px-3 py-1.5 border border-gray-400 rounded-lg
                 focus:ring-2 focus:ring-indigo-500 focus:outline-none"
        />
      </div>

      <!-- Description -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Description
        </label>
        <textarea
          name="listing[description]"
          rows="3"
          required
          class="w-full px-3 py-1.5 border border-gray-400 rounded-lg
                 focus:ring-2 focus:ring-indigo-500 focus:outline-none"
        ></textarea>
      </div>

      <!-- Image URL -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Image URL
        </label>
        <input
          type="url"
          name="listing[image]"
          class="w-full px-3 py-1.5 border border-gray-400 rounded-lg
                 focus:ring-2 focus:ring-indigo-500 focus:outline-none"
        />
      </div>

      <!-- Price -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Price (â‚¹)
        </label>
        <input
          type="number"
          name="listing[price]"
          required
          min="0"
          class="w-full px-3 py-1.5 border border-gray-400 rounded-lg
                 focus:ring-2 focus:ring-indigo-500 focus:outline-none"
        />
      </div>

      <!-- Location -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Location
        </label>
        <input
          type="text"
          name="listing[location]"
          required
          class="w-full px-3 py-1.5 border border-gray-400 rounded-lg
                 focus:ring-2 focus:ring-indigo-500 focus:outline-none"
        />
      </div>

      <!-- Country -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Country
        </label>
        <input
          type="text"
          name="listing[country]"
          required
          class="w-full px-3 py-1.5 border border-gray-400 rounded-lg
                 focus:ring-2 focus:ring-indigo-500 focus:outline-none"
        />
      </div>

      <!-- Submit -->
      <button
        type="submit"
        class="w-full bg-indigo-600 text-white py-2 rounded-lg font-medium
               hover:bg-indigo-700 transition"
      >
        Add Listing
      </button>

    </form>
  </div>

</div>
