<%- layout('/layouts/boilerplate.ejs') %>
<section class="bg-gray-200 min-h-screen px-4 py-3">
  <form
    action="/wanderlust/search"
    method="get"
    class="md:hidden flex items-center justify-between gap-4"
  >
    <input
      type="text"
      name="q"
      placeholder="Search your Destination"
      required
      class="w-full pl-2 pr-4 py-1 border-2 border-solid border-red-600/90 rounded-lg bg-gray-100 focus:ring-1 focus:ring-red-600/90 focus:outline-none invalid:border-red-600/90"
    />
    <button
      class="bg-red-600/90 px-4 py-1 rounded-full text-white cursor-pointer"
    >
      Search
    </button>
  </form>
  <div class="flex items-center wrap">
    <div class="py-3">
      <h2 class="font-display text-2xl lg:text-4xl font-bold text-foreground">
        Featured Stays
      </h2>
      <p class="text-muted-foreground mt-1">
        Handpicked destinations loved by travelers
      </p>
    </div>
  </div>

  <!-- Listings Grid -->
  <ul
    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6"
  >
    <%if(allListings.length>0) {%> <% for (let listing of allListings) { %>
    <li class="w-full">
      <a href="/wanderlust/listings/<%=listing._id%>">
        <div
          class="w-full rounded-lg overflow-hidden hover:shadow-md transition"
        >
          <img
            src="<%= listing.image.path %>"
            alt="image"
            class="w-full h-64 rounded-2xl object-cover"
          />

          <div class="p-3">
            <p class="text-gray-800 font-medium text-sm truncate font-bold">
              <%= listing.title %>
            </p>

            <p class="text-gray-700 font-semibold mt-1">
              ₹<%= listing.price != null ? listing.price.toLocaleString('en-IN')
              : "N/A" %>/2 Day
            </p>
          </div>
        </div>
      </a>
    </li>
    <% } %> <% } %> 
  </ul>
  <%if(allListings.length==0) {%>
    <div class="flex flex-col items-center justify-center p-10 text-center">
      <div class="text-red-500 mb-4">
        <!-- Icon -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-16 h-16"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1.5"
            d="M21 21l-4.35-4.35M16.65 10.825A5.825 5.825 0 1110.825 5a5.825 5.825 0 015.825 5.825z"
          />
        </svg>
      </div>

      <h2 class="text-2xl font-semibold text-gray-800 mb-2">
        No results found
      </h2>

      <p class="text-gray-500 max-w-md">
        We couldn’t find any listings matching your search. Try using different
        keywords or check your spelling.
      </p>

      <a
        href="/wanderlust/listings"
        class="mt-6 inline-block rounded-lg bg-red-600 px-6 py-2 text-white font-medium hover:bg-red-700 transition"
      >
        View all listings
      </a>
    </div>

    <%}%>
</section>
