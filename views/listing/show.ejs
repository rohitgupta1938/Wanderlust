<% layout('/layouts/boilerplate.ejs') %>
 <body>
  <div class="bg-gray-100 min-h-screen flex items-center justify-center">

    <!-- Main Card -->
    <div class="w-full max-w-3xl bg-white rounded-2xl shadow-lg p-8">

      <!-- Title -->
      <h1 class="text-3xl font-bold text-gray-800 mb-6 border-b pb-4">
        Listing Details
      </h1>

      <!-- Details Section -->
      <div class="space-y-4">

        <div class="flex justify-between">
          <span class="text-gray-500 font-medium">Title</span>
          <span class="text-gray-800 font-semibold">
            <%= listing.title %>
          </span>
        </div>

        <div class="flex justify-between">
          <span class="text-gray-500 font-medium">Description</span>
          <span class="text-gray-800 text-right max-w-md">
            <%= listing.description %>
          </span>
        </div>

        <div class="flex justify-between">
          <span class="text-gray-500 font-medium">Price</span>
          <span class="text-green-600 font-bold text-lg">
            â‚¹ <%= listing.price.toLocaleString('en-IN') %>
          </span>
        </div>

        <div class="flex justify-between">
          <span class="text-gray-500 font-medium">Location</span>
          <span class="text-gray-800">
            <%= listing.location %>
          </span>
        </div>

        <div class="flex justify-between">
          <span class="text-gray-500 font-medium">Country</span>
          <span class="text-gray-800">
            <%= listing.country %>
          </span>
        </div>

      </div>

      <!-- Actions -->
      <div class="mt-8 flex gap-4">

        <a
          href="/listings/<%= listing._id %>/edit"
          class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-medium transition"
        >
          Edit Listing
        </a>

        <a
          href="/listings"
          class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-6 py-2 rounded-lg font-medium transition"
        >
          Back
        </a>

      </div>
    </div>

  </div>
   </body>
