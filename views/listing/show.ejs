
<% layout('/layouts/boilerplate.ejs') %>

<main class="min-h-[90vh] bg-gray-100">
  <div class="flex justify-center px-4 sm:px-6">
    
    <!-- Card Container -->
    <div class="w-100 px-5 sm:w-3/4 md:w-2/3 lg:w-1/2 py-6">

      <!-- Heading -->
      <h3 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-4">
        Listing Details
      </h3>

      <!-- Image -->
      <div class="w-full">
        <img
          src="<%= listing.image %>"
          alt="image"
          class="w-full h-56 sm:h-64 md:h-64 rounded-2xl object-cover"
        />
      </div>

      <!-- Details -->
      <div class="py-4 space-y-1">
        <p class="text-gray-800 font-bold text-base sm:text-lg truncate">
          <%= listing.title %>
        </p>

        <p class="text-gray-700 text-sm sm:text-base line-clamp-2">
          <%= listing.description %>
        </p>

        <p class="text-gray-900 font-semibold mt-1 text-base">
          â‚¹<%= listing.price.toLocaleString('en-IN') %>/Night
        </p>

        <p class="text-gray-700 text-sm sm:text-base">
          <%= listing.location %>, <%= listing.country %>
        </p>
      </div>

      <!-- Buttons -->
      <div class="flex flex-col sm:flex-row gap-3">
        <a
          href="/listings/<%= listing._id %>/edit"
          class="w-full sm:w-auto text-center bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-medium transition"
        >
          Edit
        </a>

        <a
          href="/listings"
          class="w-full sm:w-auto text-center bg-gray-600 hover:bg-gray-700 text-white px-6 py-2 rounded-lg font-medium transition"
        >
          Back
        </a>

        <form
          action="/listings/<%= listing._id %>?_method=DELETE"
          method="POST"
          class="w-full sm:w-auto"
        >
          <button
            class="w-full bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-lg font-medium transition"
          >
            Delete
          </button>
        </form>
      </div>

    </div>
  </div>
</main>

<%- include('../includes/footer.ejs') %>
